<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
   >

    <RelativeLayout
        android:layout_width="325dp"
        android:layout_height="match_parent" 
        android:layout_gravity="center">

        <Button
            android:id="@+id/geofence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/mystatus"
            android:layout_below="@+id/currentstatus"
            android:text="Geofence" />

        <Button
            android:id="@+id/myfinancial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/currentstatus"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="38dp"
            android:text="Myfinancial" />

        <Button
            android:id="@+id/employees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/myfinancial"
            android:text="Employees" />

        <ImageButton
            android:id="@+id/currentstatus"
            android:layout_width="96dp"
            android:layout_height="69dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/myfinancial"
            android:background="@drawable/current" />

        <Button
            android:id="@+id/mystatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myday"
            android:layout_toLeftOf="@+id/currentstatus"
            android:text="MyStatus" />

        <Button
            android:id="@+id/dashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/currentstatus"
            android:layout_below="@+id/geofence"
            android:layout_marginRight="30dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/dashboard" />

        <Button
            android:id="@+id/myday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/myfinancial"
            android:layout_alignLeft="@+id/mystatus"
            android:layout_marginBottom="23dp"
            android:layout_marginLeft="66dp"
            android:background="@drawable/myday" />

    </RelativeLayout>
   
</LinearLayout>